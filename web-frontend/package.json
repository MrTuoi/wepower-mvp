    "ethereumjs-wallet": "^0.6.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "moment": "^2.18.1",
    "ng2-charts": "^1.6.0",
    "rxjs": "^5.1.0",
